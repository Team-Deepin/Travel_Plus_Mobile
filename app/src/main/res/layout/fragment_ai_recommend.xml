<!--            app:layout_constraintStart_toStartOf="@id/guidelineVertical1"-->
<!--            android:elevation="5dp"-->
<!--            android:padding="0dp"/>-->
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>