<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/ai_fragment_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ai_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineHorizontal88"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.88"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineHorizontal95"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.95"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineHorizontal1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.1"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineVertical1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.1" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineVertical9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.9" />
        <TextView
            android:id="@+id/ai_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="@font/bmeuljirottf"
            android:text="어떤 여행을 하시나요 ?"
            android:textColor="@color/black"
            android:textSize="30dp"
            app:layout_constraintStart_toStartOf="@id/guidelineVertical1"
            app:layout_constraintTop_toTopOf="@id/guidelineHorizontal1" />
        <androidx.cardview.widget.CardView
            android:id="@+id/card_trip_date"
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/login_button"
            android:layout_marginBottom="30dp"
            app:layout_constraintTop_toBottomOf="@id/ai_text"
            app:layout_constraintStart_toStartOf="@id/guidelineVertical1"
            app:layout_constraintEnd_toEndOf="@id/guidelineVertical9"
            android:layout_marginTop="20dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/ai_date_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="여행 날짜"
                    android:fontFamily="@font/bmeuljirottf"
                    android:textSize="25dp"
                    android:textColor="@color/color_text"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"/>
                <ImageView
                    android:id="@+id/ai_date_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/down_arrow2"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="5dp"/>
                <androidx.cardview.widget.CardView
                    android:id="@+id/ai_date_select"
                    android:layout_width="125dp"
                    android:layout_height="40dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/point"
                    android:visibility="gone"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="5dp">
                    <TextView
                        android:id="@+id/ai_date_select_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="05/03 ~ 05/05"
                        android:textSize="15dp"
                        android:fontFamily="@font/bmeuljirottf"
                        android:layout_gravity="center"
                        android:textColor="@color/black"/>
                </androidx.cardview.widget.CardView>
                <View
                    android:id="@+id/ai_line1"
                    android:layout_width="350dp"
                    android:layout_height="2dp"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/ai_date_text"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="10dp"
                    android:background="@color/login_button"/>
                <com.applandeo.materialcalendarview.CalendarView
                    android:id="@+id/ai_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:selectionColor="@color/blur"
                    app:selectionLabelColor="@color/black"
                    android:visibility="gone"
                    app:type="range_picker"
                    app:layout_constraintTop_toBottomOf="@id/ai_line1"
                    android:layout_marginTop="15dp"/>
                <androidx.cardview.widget.CardView
                    android:id="@+id/ai_calendar_check_btn"
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/color_background"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/ai_date"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="15dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="결정"
                        android:textSize="15dp"
                        android:fontFamily="@font/bmeuljirottf"
                        android:layout_gravity="center"
                        android:textColor="@color/black"/>
                </androidx.cardview.widget.CardView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_transport"
            android:layout_width="0dp"
            android:layout_height="50dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/login_button"
            app:layout_constraintTop_toBottomOf="@id/card_trip_date"
            app:layout_constraintStart_toStartOf="@id/guidelineVertical1"
            app:layout_constraintEnd_toEndOf="@id/guidelineVertical9"
            android:layout_marginTop="20dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/transport_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이동 수단"
                    android:textSize="25dp"
                    android:textColor="@color/color_text"
                    android:fontFamily="@font/bmeuljirottf"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"/>

                <ImageView
                    android:id="@+id/ai_transport_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/down_arrow2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"/>
                <androidx.cardview.widget.CardView
                    android:id="@+id/ai_transport_select"
                    android:layout_width="125dp"
                    android:layout_height="40dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="4dp"
                    android:visibility="gone"
                    app:cardBackgroundColor="@color/point"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="5dp">
                    <TextView
                        android:id="@+id/ai_transport_select_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="자가용"
                        android:textSize="20dp"
                        android:fontFamily="@font/bmeuljirottf"
                        android:layout_gravity="center"
                        android:textColor="@color/black" />
                </androidx.cardview.widget.CardView>
                <View
                    android:id="@+id/ai_line2"
                    android:layout_width="350dp"
                    android:layout_height="2dp"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/transport_text"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="10dp"
                    android:background="@color/login_button"/>
                <androidx.cardview.widget.CardView
                    android:id="@+id/ai_car"
                    android:layout_width="125dp"
                    android:layout_height="40dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/login_button"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/ai_line2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/ai_transport"
                    android:layout_marginTop="15dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="자가용"
                        android:textSize="20dp"
                        android:fontFamily="@font/bmeuljirottf"
                        android:layout_gravity="center"
                        android:textColor="@color/black"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/ai_transport"
                    android:layout_width="125dp"
                    android:layout_height="40dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/login_button"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/ai_line2"
                    app:layout_constraintStart_toEndOf="@id/ai_car"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="15dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="대중교통"
                        android:textSize="20dp"
                        android:fontFamily="@font/bmeuljirottf"
                        android:layout_gravity="center"
                        android:textColor="@color/black"/>
                </androidx.cardview.widget.CardView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/ai_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:cardElevation="5dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/color_background"
            app:strokeColor="@color/AIbutton_deactivate"
            app:strokeWidth="3dp"
            app:layout_constraintTop_toTopOf="@id/guidelineHorizontal88"
            app:layout_constraintBottom_toBottomOf="@id/guidelineHorizontal95"
            app:layout_constraintEnd_toEndOf="@id/guidelineVertical9"
            app:layout_constraintStart_toStartOf="@id/guidelineVertical1">
            <TextView
                android:id="@+id/ai_btn_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AI 개인 추천 받기"
                android:fontFamily="@font/bmeuljirottf"
                android:textSize="25dp"
                android:textColor="@color/AIbutton_deactivate"
                android:layout_gravity="center"/>
        </com.google.android.material.card.MaterialCardView>
