<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineHorizontal85"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.85" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineVertical95"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />
    <View
        android:id="@+id/detail_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99000000"
        android:elevation="3dp"
        android:visibility="gone"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/detail_plus_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="+"
        android:src="@drawable/plus"
        android:elevation="5dp"
        app:backgroundTint="@color/color_button1"
        app:tint="@null"
        app:layout_constraintTop_toTopOf="@id/guidelineHorizontal85"
        app:layout_constraintEnd_toEndOf="@id/guidelineVertical95"
        android:visibility="gone"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/detail_cancel_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="X"
        android:src="@drawable/x"
        android:elevation="6dp"
        app:backgroundTint="@color/color_button1"
        app:tint="@null"
        app:layout_constraintTop_toTopOf="@id/guidelineHorizontal85"
        app:layout_constraintEnd_toEndOf="@id/guidelineVertical95"
        android:visibility="gone"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/detail_delete_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="delete"
        android:src="@drawable/garbage"
        android:elevation="6dp"
        app:backgroundTint="@color/color_button1"
        app:tint="@null"
        app:layout_constraintBottom_toTopOf="@id/detail_cancel_fab"
        app:layout_constraintEnd_toEndOf="@id/guidelineVertical95"
        android:layout_marginBottom="10dp"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/detail_delete_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="삭제하기"
        android:fontFamily="@font/bmeuljirottf"
        android:textColor="@color/color_background"
        android:elevation="6dp"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@id/detail_delete_fab"
        app:layout_constraintEnd_toStartOf="@id/detail_delete_fab"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="10dp"
        android:visibility="gone"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/detail_rate_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="rate"
        android:src="@drawable/star"
        app:backgroundTint="@color/color_button1"
        app:tint="@null"
        android:elevation="6dp"
        app:layout_constraintBottom_toTopOf="@id/detail_delete_fab"
        app:layout_constraintEnd_toEndOf="@id/guidelineVertical95"
        android:layout_marginBottom="10dp"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/detail_rate_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="평가하기"
        android:fontFamily="@font/bmeuljirottf"
        android:textColor="@color/color_background"
        android:elevation="6dp"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@id/detail_rate_fab"
        app:layout_constraintEnd_toStartOf="@id/detail_rate_fab"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="10dp"
        android:visibility="gone"/>
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/mainView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/appBarLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="NotSibling" />

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/mainTap"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#C6E7FF"
            app:tabIndicatorColor="@color/black"
            app:tabIndicatorAnimationMode="linear"
            app:tabIconTint="@color/black">

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:icon="@drawable/home"/>

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:icon="@drawable/location" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:icon="@drawable/more" />

        </com.google.android.material.tabs.TabLayout>

    </com.google.android.material.appbar.AppBarLayout>

</androidx.constraintlayout.widget.ConstraintLayout>