<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineHorizontal1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineHorizontal15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineHorizontal25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineHorizontal28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.28" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineHorizontal37"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.37" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineHorizontal42"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.42" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineHorizontal85"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.85" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineHorizontal9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineHorizontal95"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.95"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineVertical1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineVertical9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />

    <TextView
        android:id="@+id/onboarding_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="당신에 대해 알려주세요!"
        android:fontFamily="@font/bmeuljirottf"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/guidelineHorizontal1"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/onboarding_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="몇 가지 정보를 입력하면\n당신만을 위한 여행을 추천해 드릴게요"
        android:fontFamily="@font/bmeuljirottf"
        android:textSize="15dp"
        android:textColor="#5D6D7E"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/onboarding_text1"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/input_age"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/rounded_background"
        app:layout_constraintStart_toStartOf="@id/guidelineVertical1"
        app:layout_constraintEnd_toEndOf="@id/guidelineVertical9"
        app:layout_constraintTop_toTopOf="@id/guidelineHorizontal15"
        app:layout_constraintBottom_toBottomOf="@id/guidelineHorizontal25">
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineVertical08_inner_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.08" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineVertical92_inner_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.92" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineHorizontal12_inner_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.12" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineHorizontal85_inner_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.85" />
        <TextView
            android:id="@+id/onboarding_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="생년월일"
            android:fontFamily="@font/bmeuljirottf"
            android:textSize="25dp"
            android:textColor="@color/color_text"
            app:layout_constraintStart_toStartOf="@id/guidelineVertical08_inner_age"
            app:layout_constraintTop_toTopOf="@id/guidelineHorizontal12_inner_age" />
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/onboarding_birth"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fontFamily="@font/bmeuljirottf"
            android:background="@drawable/rounded_input"
            android:textColorHint="@color/text_sub"
            android:inputType="number"
            android:hint="생년월일을 입력해주세요"
            android:gravity="left"
            app:layout_constraintStart_toStartOf="@id/guidelineVertical08_inner_age"
            app:layout_constraintEnd_toEndOf="@id/guidelineVertical92_inner_age"
            app:layout_constraintTop_toBottomOf="@id/onboarding_age"
            app:layout_constraintBottom_toBottomOf="@id/guidelineHorizontal85_inner_age"
            android:layout_marginTop="5dp"
            android:paddingStart="10dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/input_sex"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/rounded_background"
        app:layout_constraintStart_toStartOf="@id/guidelineVertical1"
        app:layout_constraintEnd_toEndOf="@id/guidelineVertical9"
        app:layout_constraintTop_toBottomOf="@id/guidelineHorizontal28"
        app:layout_constraintBottom_toBottomOf="@id/guidelineHorizontal37">
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineVertical08_inner_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.08" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineVertical35_inner_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.35" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineVertical92_inner_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.92" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineHorizontal12_inner_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.12" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineHorizontal75_inner_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.75" />
        <TextView
            android:id="@+id/onboarding_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="성별"
            android:fontFamily="@font/bmeuljirottf"
            android:textSize="25dp"
            android:textColor="@color/color_text"
            app:layout_constraintStart_toStartOf="@id/guidelineVertical08_inner_sex"
            app:layout_constraintTop_toTopOf="@id/guidelineHorizontal12_inner_sex"/>
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/onboarding_sex"
            app:layout_constraintStart_toStartOf="@id/guidelineVertical35_inner_sex">

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/male"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:button="@null"
                android:background="@drawable/radio_button"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="남성"
                android:fontFamily="@font/bmeuljirottf"
                android:textSize="20dp"
                android:textColor="@color/text_sub"
                android:layout_marginStart="5dp" />
            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/female"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:button="@null"
                android:background="@drawable/radio_button"
                android:layout_marginStart="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="여성"
                android:fontFamily="@font/bmeuljirottf"
                android:textSize="20dp"
                android:textColor="@color/text_sub"
                android:layout_marginStart="5dp" />
        </RadioGroup>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/input_theme"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/rounded_background"
        app:layout_constraintStart_toStartOf="@id/guidelineVertical1"
        app:layout_constraintEnd_toEndOf="@id/guidelineVertical9"
        app:layout_constraintTop_toTopOf="@id/guidelineHorizontal42"
        app:layout_constraintBottom_toBottomOf="@id/guidelineHorizontal85">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/onboarding_theme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="여행 취향"
                    android:fontFamily="@font/bmeuljirottf"
                    android:textSize="25dp"
                    android:textColor="@color/color_text"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="26dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="22dp"/>
                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/city_tour"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:button="@null"
                    android:background="@drawable/radio_button"
                    app:layout_constraintTop_toBottomOf="@id/onboarding_theme"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="34dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="세련된 도시 여행"
                    android:fontFamily="@font/bmeuljirottf"
                    android:textColor="@color/text_sub"
                    app:layout_constraintTop_toBottomOf="@id/onboarding_theme"
                    app:layout_constraintStart_toEndOf="@id/city_tour"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="10dp"/>
                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/activity_tour"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:button="@null"
                    android:background="@drawable/radio_button"
                    app:layout_constraintTop_toBottomOf="@id/city_tour"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="34dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="짜릿한 액티비티 여행"
                    android:fontFamily="@font/bmeuljirottf"
                    android:textColor="@color/text_sub"
                    app:layout_constraintTop_toBottomOf="@id/city_tour"
                    app:layout_constraintStart_toEndOf="@id/activity_tour"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="10dp"/>
                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/emotion_tour"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:button="@null"
                    android:background="@drawable/radio_button"
                    app:layout_constraintTop_toBottomOf="@id/activity_tour"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="34dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="예술과 감성 충전 여행"
                    android:fontFamily="@font/bmeuljirottf"
                    android:textColor="@color/text_sub"
                    app:layout_constraintTop_toBottomOf="@id/activity_tour"
                    app:layout_constraintStart_toEndOf="@id/emotion_tour"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="10dp"/>
                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/shopping_tour"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:button="@null"
                    android:background="@drawable/radio_button"
                    app:layout_constraintTop_toBottomOf="@id/emotion_tour"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="34dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="트렌디한 쇼핑 탐방"
                    android:fontFamily="@font/bmeuljirottf"
                    android:textColor="@color/text_sub"
                    app:layout_constraintTop_toBottomOf="@id/emotion_tour"
                    app:layout_constraintStart_toEndOf="@id/shopping_tour"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="10dp"/>
                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/history_tour"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:button="@null"
                    android:background="@drawable/radio_button"
                    app:layout_constraintTop_toBottomOf="@id/shopping_tour"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="34dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="시간을 거스르는 역사 여행"
                    android:fontFamily="@font/bmeuljirottf"
                    android:textColor="@color/text_sub"
                    app:layout_constraintTop_toBottomOf="@id/shopping_tour"
                    app:layout_constraintStart_toEndOf="@id/history_tour"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="10dp"/>
                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/healing_tour"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:button="@null"
                    android:background="@drawable/radio_button"
                    app:layout_constraintTop_toBottomOf="@id/history_tour"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="34dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="힐링 여행 및 웰니스 투어"
                    android:fontFamily="@font/bmeuljirottf"
                    android:textColor="@color/text_sub"
                    app:layout_constraintTop_toBottomOf="@id/history_tour"
                    app:layout_constraintStart_toEndOf="@id/healing_tour"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="10dp"/>
                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/food_tour"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:button="@null"
                    android:background="@drawable/radio_button"
                    app:layout_constraintTop_toBottomOf="@id/healing_tour"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="34dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="맛있는 맛집 투어"
                    android:fontFamily="@font/bmeuljirottf"
                    android:textColor="@color/text_sub"
                    app:layout_constraintTop_toBottomOf="@id/healing_tour"
                    app:layout_constraintStart_toEndOf="@id/food_tour"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="10dp"/>
                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/nature_tour"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:button="@null"
                    android:background="@drawable/radio_button"
                    app:layout_constraintTop_toBottomOf="@id/food_tour"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="34dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="신비한 자연 투어"
                    android:fontFamily="@font/bmeuljirottf"
                    android:textColor="@color/text_sub"
                    app:layout_constraintTop_toBottomOf="@id/food_tour"
                    app:layout_constraintStart_toEndOf="@id/nature_tour"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="10dp"/>
                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/experience_tour"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:button="@null"
                    android:background="@drawable/radio_button"
                    app:layout_constraintTop_toBottomOf="@id/nature_tour"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="34dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="오감만족 체험 여행"
                    android:fontFamily="@font/bmeuljirottf"
                    android:textColor="@color/text_sub"
                    app:layout_constraintTop_toBottomOf="@id/nature_tour"
                    app:layout_constraintStart_toEndOf="@id/experience_tour"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="10dp"/>
                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/festival_tour"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:button="@null"
                    android:background="@drawable/radio_button"
                    app:layout_constraintTop_toBottomOf="@id/experience_tour"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="34dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="신나는 축제와 공연"
                    android:fontFamily="@font/bmeuljirottf"
                    android:textColor="@color/text_sub"
                    app:layout_constraintTop_toBottomOf="@id/experience_tour"
                    app:layout_constraintStart_toEndOf="@id/festival_tour"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="10dp"/>
                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/park_tour"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:button="@null"
                    android:background="@drawable/radio_button"
                    app:layout_constraintTop_toBottomOf="@id/festival_tour"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="34dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="즐거운 놀이 공원"
                    android:fontFamily="@font/bmeuljirottf"
                    android:textColor="@color/text_sub"
                    app:layout_constraintTop_toBottomOf="@id/festival_tour"
                    app:layout_constraintStart_toEndOf="@id/park_tour"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="10dp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    app:layout_constraintTop_toBottomOf="@id/park_tour"
                    app:layout_constraintStart_toStartOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/onboarding_input"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/gray"
        app:layout_constraintStart_toStartOf="@id/guidelineVertical1"
        app:layout_constraintEnd_toEndOf="@id/guidelineVertical9"
        app:layout_constraintTop_toTopOf="@id/guidelineHorizontal9"
        app:layout_constraintBottom_toBottomOf="@id/guidelineHorizontal95">
        <TextView
            android:id="@+id/onboarding_input_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="입력하기"
            android:fontFamily="@font/bmeuljirottf"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>