<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/onboarding_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="당신에 대해 알려주세요!"
                android:fontFamily="@font/bmeuljirottf"
                android:textSize="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="65dp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/onboarding_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="몇 가지 정보를 입력하면"
                android:fontFamily="@font/bmeuljirottf"
                android:textSize="15dp"
                android:textColor="#5D6D7E"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/onboarding_text1"
                />
            <TextView
                android:id="@+id/onboarding_text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="당신만을 위한 여행을 추천해 드릴게요"
                android:fontFamily="@font/bmeuljirottf"
                android:textSize="15dp"
                android:textColor="#5D6D7E"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/onboarding_text2"
                />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/input_age"
                android:layout_width="330dp"
                android:layout_height="100dp"
                android:background="@drawable/rounded_background"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/onboarding_text3"
                android:layout_marginTop="30dp">
                <TextView
                    android:id="@+id/onboarding_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="나이"
                    android:fontFamily="@font/bmeuljirottf"
                    android:textSize="25dp"
                    android:textColor="@color/color_text"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="26dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="22dp"/>
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/onboarding_birth"
                    android:layout_width="280dp"
                    android:layout_height="30dp"
                    android:fontFamily="@font/bmeuljirottf"
                    android:background="@drawable/rounded_input"
                    android:textColorHint="@color/text_sub"
                    android:inputType="number"
                    android:hint="생년월일을 입력해주세요"
                    android:gravity="left"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/onboarding_age"
                    android:layout_marginStart="26dp"
                    android:paddingStart="20dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/input_sex"
                android:layout_width="330dp"
                android:layout_height="100dp"
                android:background="@drawable/rounded_background"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/input_age"
                android:layout_marginTop="30dp">
                <TextView
                    android:id="@+id/onboarding_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="성별"
                    android:fontFamily="@font/bmeuljirottf"
                    android:textSize="25dp"
                    android:textColor="@color/color_text"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="26dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="22dp"/>
                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="45dp"
                    >
                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/male"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:button="@null"
                        android:background="@drawable/radio_button"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="남성"
                        android:fontFamily="@font/bmeuljirottf"
                        android:textSize="20dp"
                        android:textColor="@color/text_sub"
                        android:layout_marginStart="5dp" />
                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/female"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:button="@null"
                        android:background="@drawable/radio_button"
                        android:layout_marginStart="20dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="여성"
                        android:fontFamily="@font/bmeuljirottf"
                        android:textSize="20dp"
                        android:textColor="@color/text_sub"
                        android:layout_marginStart="5dp" />
                </RadioGroup>


            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/input_theme"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_background"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/input_sex"
                android:layout_marginTop="30dp">
                <TextView
                    android:id="@+id/onboarding_theme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="여행 취향"
                    android:fontFamily="@font/bmeuljirottf"
                    android:textSize="25dp"
                    android:textColor="@color/color_text"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="26dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="22dp"/>
                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/city_tour"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:button="@null"
                    android:background="@drawable/radio_button"
                    app:layout_constraintTop_toBottomOf="@id/onboarding_theme"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="34dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="세련된 도시 여행"
                    android:fontFamily="@font/bmeuljirottf"
                    android:textColor="@color/text_sub"
                    app:layout_constraintTop_toBottomOf="@id/onboarding_theme"
                    app:layout_constraintStart_toEndOf="@id/city_tour"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="10dp"/>
                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/activity_tour"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:button="@null"
                    android:background="@drawable/radio_button"
                    app:layout_constraintTop_toBottomOf="@id/city_tour"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="34dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="짜릿한 액티비티 여행"
                    android:fontFamily="@font/bmeuljirottf"
                    android:textColor="@color/text_sub"
                    app:layout_constraintTop_toBottomOf="@id/city_tour"
                    app:layout_constraintStart_toEndOf="@id/activity_tour"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="10dp"/>
                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/emotion_tour"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:button="@null"
                    android:background="@drawable/radio_button"
                    app:layout_constraintTop_toBottomOf="@id/activity_tour"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="34dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="예술과 감성 충전 여행"
                    android:fontFamily="@font/bmeuljirottf"
                    android:textColor="@color/text_sub"
                    app:layout_constraintTop_toBottomOf="@id/activity_tour"
                    app:layout_constraintStart_toEndOf="@id/emotion_tour"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="10dp"/>
                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/shopping_tour"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:button="@null"
                    android:background="@drawable/radio_button"
                    app:layout_constraintTop_toBottomOf="@id/emotion_tour"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="34dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="트렌디한 쇼핑 탐방"
                    android:fontFamily="@font/bmeuljirottf"
                    android:textColor="@color/text_sub"
                    app:layout_constraintTop_toBottomOf="@id/emotion_tour"
                    app:layout_constraintStart_toEndOf="@id/shopping_tour"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="10dp"/>
                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/history_tour"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:button="@null"
                    android:background="@drawable/radio_button"
                    app:layout_constraintTop_toBottomOf="@id/shopping_tour"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="34dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="시간을 거스르는 역사 여행"
                    android:fontFamily="@font/bmeuljirottf"
                    android:textColor="@color/text_sub"
                    app:layout_constraintTop_toBottomOf="@id/shopping_tour"
                    app:layout_constraintStart_toEndOf="@id/history_tour"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="10dp"/>
                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/healing_tour"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:button="@null"
                    android:background="@drawable/radio_button"
                    app:layout_constraintTop_toBottomOf="@id/history_tour"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="34dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="힐링 여행 및 웰니스 투어"
                    android:fontFamily="@font/bmeuljirottf"
                    android:textColor="@color/text_sub"
                    app:layout_constraintTop_toBottomOf="@id/history_tour"
                    app:layout_constraintStart_toEndOf="@id/healing_tour"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="10dp"/>
                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/food_tour"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:button="@null"
                    android:background="@drawable/radio_button"
                    app:layout_constraintTop_toBottomOf="@id/healing_tour"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="34dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="맛있는 맛집 투어"
                    android:fontFamily="@font/bmeuljirottf"
                    android:textColor="@color/text_sub"
                    app:layout_constraintTop_toBottomOf="@id/healing_tour"
                    app:layout_constraintStart_toEndOf="@id/food_tour"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="10dp"/>
                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/nature_tour"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:button="@null"
                    android:background="@drawable/radio_button"
                    app:layout_constraintTop_toBottomOf="@id/food_tour"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="34dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="신비한 자연 투어"
                    android:fontFamily="@font/bmeuljirottf"
                    android:textColor="@color/text_sub"
                    app:layout_constraintTop_toBottomOf="@id/food_tour"
                    app:layout_constraintStart_toEndOf="@id/nature_tour"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="10dp"/>
                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/experience_tour"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:button="@null"
                    android:background="@drawable/radio_button"
                    app:layout_constraintTop_toBottomOf="@id/nature_tour"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="34dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="오감만족 체험 여행"
                    android:fontFamily="@font/bmeuljirottf"
                    android:textColor="@color/text_sub"
                    app:layout_constraintTop_toBottomOf="@id/nature_tour"
                    app:layout_constraintStart_toEndOf="@id/experience_tour"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="10dp"/>
                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/festival_tour"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:button="@null"
                    android:background="@drawable/radio_button"
                    app:layout_constraintTop_toBottomOf="@id/experience_tour"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="34dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="신나는 축제와 공연"
                    android:fontFamily="@font/bmeuljirottf"
                    android:textColor="@color/text_sub"
                    app:layout_constraintTop_toBottomOf="@id/experience_tour"
                    app:layout_constraintStart_toEndOf="@id/festival_tour"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="10dp"/>
                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/park_tour"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:button="@null"
                    android:background="@drawable/radio_button"
                    app:layout_constraintTop_toBottomOf="@id/festival_tour"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="34dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="즐거운 놀이 공원"
                    android:fontFamily="@font/bmeuljirottf"
                    android:textColor="@color/text_sub"
                    app:layout_constraintTop_toBottomOf="@id/festival_tour"
                    app:layout_constraintStart_toEndOf="@id/park_tour"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="10dp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    app:layout_constraintTop_toBottomOf="@id/park_tour"
                    app:layout_constraintStart_toStartOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                app:layout_constraintTop_toBottomOf="@id/input_theme"
                android:layout_width="match_parent"
                android:layout_height="150dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/onboarding_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/input_deactivated"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="80dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>