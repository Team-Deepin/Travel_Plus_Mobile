<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="여행+"
        android:textSize="60dp"
        android:textColor="@color/black"
        android:fontFamily="@font/bmeuljiro10yearslater"
        app:layout_constraintTop_toTopOf="@id/guideline1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="90dp" />
    <ImageView
        android:id="@+id/home_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/home_logo"
        app:layout_constraintTop_toTopOf="@id/guideline1"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintEnd_toStartOf="@id/title"
        />
    <Spinner
        android:id="@+id/weather_location"
        android:layout_width="90dp"
        android:layout_height="40dp"
        style="@style/Widget.AppCompat.Spinner"
        android:dropDownWidth="match_parent"
        android:background="@drawable/dropdown_background"
        android:popupBackground="@color/color_background"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="@id/home_logo"
        android:layout_marginTop="15dp"
        android:visibility="gone">
    </Spinner>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/weather_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/weather_location"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"
        android:visibility="gone">
        <androidx.cardview.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/today_card"
            android:layout_width="330dp"
            android:layout_height="150dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/login_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="오늘의 날씨"
                android:fontFamily="@font/bmeuljirottf"
                android:textColor="@color/color_text"
                android:layout_marginStart="17dp"
                android:layout_marginTop="17dp"
                android:textSize="25dp" />
            <TextView
                android:id="@+id/today_temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bmeuljirottf"
                android:textSize="30dp"
                android:textColor="@color/color_background"
                android:layout_marginStart="25dp"
                android:layout_marginTop="58dp"/>
            <ImageView
                android:id="@+id/today_weather"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_marginStart="190dp"
                android:layout_marginTop="20dp"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/tomorrow_card"
            android:layout_width="330dp"
            android:layout_height="150dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/login_button"
            app:layout_constraintTop_toBottomOf="@id/today_card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="30dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="내일의 날씨"
                android:fontFamily="@font/bmeuljirottf"
                android:textColor="@color/color_text"
                android:layout_marginStart="17dp"
                android:layout_marginTop="17dp"
                android:textSize="25dp" />
            <TextView
                android:id="@+id/tomorrow_temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bmeuljirottf"
                android:textSize="30dp"
                android:textColor="@color/color_background"
                android:layout_marginStart="25dp"
                android:layout_marginTop="58dp"/>
            <ImageView
                android:id="@+id/tomorrow_weather"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_marginStart="190dp"
                android:layout_marginTop="20dp"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/the_day_after_tomorrow_card"
            android:layout_width="330dp"
            android:layout_height="150dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/login_button"
            app:layout_constraintTop_toBottomOf="@id/tomorrow_card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="30dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="모레의 날씨"
                android:fontFamily="@font/bmeuljirottf"
                android:textColor="@color/color_text"
                android:layout_marginStart="17dp"
                android:layout_marginTop="17dp"
                android:textSize="25dp" />
            <TextView
                android:id="@+id/the_day_after_tomorrow_temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bmeuljirottf"
                android:textSize="30dp"
                android:textColor="@color/color_background"
                android:layout_marginStart="25dp"
                android:layout_marginTop="58dp"/>
            <ImageView
                android:id="@+id/the_day_after_tomorrow_weather"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_marginStart="190dp"
                android:layout_marginTop="20dp"/>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.cardview.widget.CardView
        android:id="@+id/home_list"
        android:layout_width="330dp"
        android:layout_height="120dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/login_button"
        app:layout_constraintTop_toBottomOf="@id/home_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="46dp"
        android:visibility="visible">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/home_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bmeuljirottf"
                android:text="제주도 2박 3일"
                android:textSize="25dp"
                android:textColor="@color/color_text"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="22dp"
                android:layout_marginStart="25dp"/>
            <TextView
                android:id="@+id/home_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bmeuljirottf"
                android:text="2박 3일,"
                android:textSize="20dp"
                android:textColor="@color/text_sub"
                app:layout_constraintTop_toBottomOf="@id/home_title"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="25dp"/>
            <TextView
                android:id="@+id/home_vehicle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bmeuljirottf"
                android:text="자가용"
                android:textSize="20dp"
                android:textColor="@color/text_sub"
                app:layout_constraintTop_toBottomOf="@id/home_title"
                app:layout_constraintStart_toEndOf="@id/home_duration"
                android:layout_marginStart="10dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <HorizontalScrollView
        android:id="@+id/home_scroll"
        android:layout_width="350dp"
        android:layout_height="330dp"
        app:layout_constraintTop_toBottomOf="@id/guideline2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <LinearLayout
            android:id="@+id/home_weather_list"
            android:layout_width="wrap_content"
            android:layout_height="330dp"
            android:orientation="horizontal">
        </LinearLayout>
    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>