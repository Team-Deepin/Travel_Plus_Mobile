<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineVertical1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineVertical9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineHorizontal1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineHorizontal5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineHorizontal55"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.55" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineHorizontal9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9" />
    <TextView
        android:id="@+id/inquiry_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bmeuljirottf"
        android:text="문의내역"
        android:textColor="@color/black"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="@id/guidelineVertical1"
        app:layout_constraintTop_toTopOf="@id/guidelineHorizontal1" />
    <androidx.cardview.widget.CardView
        android:id="@+id/inquiry_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/login_button"
        app:layout_constraintStart_toStartOf="@id/guidelineVertical1"
        app:layout_constraintEnd_toEndOf="@id/guidelineVertical9"
        app:layout_constraintTop_toBottomOf="@id/inquiry_text"
        app:layout_constraintBottom_toBottomOf="@id/guidelineHorizontal5">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineHorizontal03_inner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.03" />
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineVertical05_inner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.05" />
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineVertical95_inner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.95" />
            <TextView
                android:id="@+id/inquiry_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="제목"
                android:fontFamily="@font/bmeuljirottf"
                android:textSize="25dp"
                android:textColor="@color/color_text"
                app:layout_constraintStart_toStartOf="@id/guidelineVertical05_inner"
                app:layout_constraintEnd_toEndOf="@id/guidelineVertical95_inner"
                app:layout_constraintTop_toTopOf="@id/guidelineHorizontal03_inner" />
            <View
                android:id="@+id/line1"
                android:layout_width="0dp"
                android:layout_height="2dp"
                app:layout_constraintTop_toBottomOf="@id/inquiry_title"
                app:layout_constraintStart_toStartOf="@id/guidelineVertical05_inner"
                app:layout_constraintEnd_toEndOf="@id/guidelineVertical95_inner"
                android:background="@color/point" />
            <TextView
                android:id="@+id/inquiry_detail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=""
                android:fontFamily="@font/bmeuljirottf"
                android:textColor="@color/color_text"
                android:textSize="20dp"
                app:layout_constraintTop_toBottomOf="@id/line1"
                app:layout_constraintStart_toStartOf="@id/guidelineVertical05_inner"
                app:layout_constraintEnd_toEndOf="@id/guidelineVertical95_inner"
                android:layout_marginTop="10dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/answer_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/login_button"
        app:layout_constraintStart_toStartOf="@id/guidelineVertical1"
        app:layout_constraintEnd_toEndOf="@id/guidelineVertical9"
        app:layout_constraintTop_toBottomOf="@id/guidelineHorizontal55"
        app:layout_constraintBottom_toBottomOf="@id/guidelineHorizontal9">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineHorizontal03_inner_answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.03" />
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineVertical05_inner_answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.05" />
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineVertical95_inner_answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.95" />
            <TextView
                android:id="@+id/answer_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="답변"
                android:fontFamily="@font/bmeuljirottf"
                android:textSize="25dp"
                android:textColor="@color/color_text"
                app:layout_constraintStart_toStartOf="@id/guidelineVertical05_inner_answer"
                app:layout_constraintTop_toTopOf="@id/guidelineHorizontal03_inner_answer"
                app:layout_constraintEnd_toEndOf="@id/guidelineVertical95_inner_answer"/>
            <View
                android:id="@+id/line2"
                android:layout_width="0dp"
                android:layout_height="2dp"
                app:layout_constraintTop_toBottomOf="@id/answer_text"
                app:layout_constraintStart_toStartOf="@id/guidelineVertical05_inner_answer"
                app:layout_constraintEnd_toEndOf="@id/guidelineVertical95_inner_answer"
                android:background="@color/point" />
            <TextView
                android:id="@+id/answer_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="답변 내용이 없습니다."
                android:fontFamily="@font/bmeuljirottf"
                android:textColor="@color/color_text"
                android:textSize="20dp"
                app:layout_constraintTop_toBottomOf="@id/line2"
                app:layout_constraintStart_toStartOf="@id/guidelineVertical05_inner_answer"
                app:layout_constraintEnd_toEndOf="@id/guidelineVertical95_inner_answer"
                android:layout_marginTop="10dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>