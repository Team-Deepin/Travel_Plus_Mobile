<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/course_fragment_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/course_layout">
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bmeuljiro10yearslater"
            android:text="나의 여행"
            android:textColor="@color/black"
            android:textSize="30dp"
            app:layout_constraintStart_toStartOf="@id/guidelineVertical1"
            app:layout_constraintTop_toTopOf="@id/guidelineHorizontal1" />
        <ImageView
            android:id="@+id/past_course_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/past_course_btn"
            app:layout_constraintTop_toTopOf="@id/guidelineHorizontal1"
            app:layout_constraintEnd_toEndOf="@id/guidelineVertical9"
            app:layout_constraintBottom_toBottomOf="@id/title"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineHorizontal1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.1"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineHorizontal27"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.27"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineHorizontal75"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.75"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineHorizontal78"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.78"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineHorizontal85"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.85"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineHorizontal88"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.88"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineHorizontal95"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.95"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineVertical1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.1" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineVertical9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.9" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/course_no_list"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/guidelineVertical9"
            app:layout_constraintStart_toStartOf="@id/guidelineVertical1"
            app:layout_constraintTop_toTopOf="@id/guidelineHorizontal27"
            android:visibility="gone">
            <ImageView
                android:id="@+id/search_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/search"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
            <TextView
                android:id="@+id/comment"
                android:layout_width="204dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bmeuljirottf"
                android:text="기록된 여행이 없어요 여행을 떠나볼까요?"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:gravity="center"
                android:layout_marginTop="50dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/search_image"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ScrollView
            android:id="@+id/course_scroll"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintBottom_toBottomOf="@id/guidelineHorizontal75"
            app:layout_constraintStart_toStartOf="@id/guidelineVertical1"
            app:layout_constraintEnd_toEndOf="@id/guidelineVertical9">
            <LinearLayout
                android:id="@+id/course_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            </LinearLayout>
        </ScrollView>
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/course_AI"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:cardElevation="5dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/color_background"
            app:strokeColor="@color/color_button1"
            app:strokeWidth="3dp"
            app:layout_constraintTop_toTopOf="@id/guidelineHorizontal78"
            app:layout_constraintBottom_toBottomOf="@id/guidelineHorizontal85"
            app:layout_constraintEnd_toEndOf="@id/guidelineVertical9"
            app:layout_constraintStart_toStartOf="@id/guidelineVertical1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AI 개인 추천 받기"
                android:fontFamily="@font/bmeuljirottf"
                android:textSize="25dp"
                android:textColor="@color/color_button1"
                android:layout_gravity="center"/>
        </com.google.android.material.card.MaterialCardView>
<!--        <ImageView-->
<!--            android:id="@+id/course_AI"-->
<!--            android:layout_width="0dp"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:src="@drawable/ai_recommend"-->
<!--            app:layout_constraintBottom_toTopOf="@id/course_trip"-->
<!--            app:layout_constraintEnd_toEndOf="@id/guidelineVertical9"-->
<!--            app:layout_constraintStart_toStartOf="@id/guidelineVertical1"-->
<!--            android:adjustViewBounds="true"-->
<!--            android:scaleType="centerInside"/>-->
        <androidx.cardview.widget.CardView
            android:id="@+id/course_trip"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:cardElevation="5dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/color_button1"
            app:layout_constraintTop_toTopOf="@id/guidelineHorizontal88"
            app:layout_constraintBottom_toBottomOf="@id/guidelineHorizontal95"
            app:layout_constraintEnd_toEndOf="@id/guidelineVertical9"
            app:layout_constraintStart_toStartOf="@id/guidelineVertical1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="여행지 추천받기"
                android:fontFamily="@font/bmeuljirottf"
                android:textSize="25dp"
                android:textColor="@color/color_background"
                android:layout_gravity="center"/>
        </androidx.cardview.widget.CardView>
<!--        <ImageView-->
<!--            android:id="@+id/course_trip"-->
<!--            android:layout_width="0dp"-->
<!--            android:layout_height="0dp"-->
<!--            android:src="@drawable/survey_btn_activate"-->
<!--            app:layout_constraintTop_toTopOf="@id/guidelineHorizontal9"-->
<!--            app:layout_constraintBottom_toBottomOf="@id/guidelineHorizontal95"-->
<!--            app:layout_constraintEnd_toEndOf="@id/guidelineVertical9"-->
<!--            app:layout_constraintStart_toStartOf="@id/guidelineVertical1"-->
<!--            android:adjustViewBounds="true"-->
<!--            android:scaleType="centerInside"/>-->
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>