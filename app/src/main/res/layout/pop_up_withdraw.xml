<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="350dp">

    <TextView
        android:id="@+id/withdraw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bmeuljirottf"
        android:text="회원탈퇴"
        android:textColor="@color/black"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="300dp"
        android:layout_height="180dp"
        app:layout_constraintTop_toTopOf="@id/withdraw"
        android:layout_marginTop="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/rounded_withdraw_pop_up">
        <com.example.travelplus.WithdrawTextView
            android:id="@+id/check_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="여행+를 탈퇴하기 전 확인하세요"
            android:textColor="#000000"
            android:textSize="18dp"
            android:fontFamily="@font/bmeuljirottf"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="25dp" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="탈퇴하시면 개인 정보에 관한 데이터는 다 삭제되며, 모든 데이터는 복구가 불가능합니다."
            android:fontFamily="@font/bmeuljirottf"
            android:textSize="15dp"
            app:layout_constraintTop_toTopOf="@id/check_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="50dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="단, 코스 평점에 관한 기록은 삭제 되지 않습니다."
            android:fontFamily="@font/bmeuljirottf"
            android:textSize="15dp"
            app:layout_constraintTop_toTopOf="@id/check_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="113dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    
    <CheckBox
        android:id="@+id/withdraw_check"
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:layout_constraintTop_toTopOf="@id/withdraw"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="245dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="안내사항을 모두 확인하였으며, 이에 동의합니다."
        android:fontFamily="@font/bmeuljirottf"
        android:textSize="15dp"
        app:layout_constraintTop_toTopOf="@id/withdraw"
        android:layout_marginTop="242dp"
        app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
        android:id="@+id/cancel_button"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:src="@drawable/cancel_btn"
        app:layout_constraintEnd_toStartOf="@id/check_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />


    <ImageView
        android:id="@+id/check_button"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:src="@drawable/check_btn"
        android:clickable="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/cancel_button"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>