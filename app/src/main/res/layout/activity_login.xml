<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineHorizontal15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineHorizontal5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineHorizontal6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.6"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineHorizontal65"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.65"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineHorizontal8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineVertical15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.15" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineVertical85"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.85" />
    <TextView
        android:id="@+id/login_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="여행+"
        android:textSize="80dp"
        android:textColor="@color/black"
        android:fontFamily="@font/bmeuljiro10yearslater"
        app:layout_constraintTop_toTopOf="@id/guidelineHorizontal15"
        app:layout_constraintStart_toStartOf="@id/guidelineVertical15" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AI 추천 시스템을 활용한\n국내 여행 플래너"
        android:fontFamily="@font/bmeuljirottf"
        app:layout_constraintTop_toBottomOf="@+id/login_title"
        app:layout_constraintStart_toStartOf="@id/guidelineVertical15"
        android:textSize="30dp"
        android:textColor="@color/black"/>
    <ImageView
        android:layout_width="58dp"
        android:layout_height="74dp"
        android:src="@drawable/loading_logo"
        app:layout_constraintStart_toEndOf="@id/login_title"
        app:layout_constraintTop_toTopOf="@id/guidelineHorizontal15"
        android:layout_marginStart="60dp"
        android:layout_marginTop="10dp"/>
    <EditText
        android:id="@+id/login_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="이메일"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toTopOf="@id/login_password"
        app:layout_constraintStart_toStartOf="@id/guidelineVertical15"
        app:layout_constraintEnd_toEndOf="@id/guidelineVertical85"
        android:layout_marginBottom="15dp"
        android:textSize="15dp"
        android:fontFamily="@font/bmeuljirottf"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/login_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="비밀번호"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@id/guidelineHorizontal5"
        app:layout_constraintStart_toStartOf="@id/guidelineVertical15"
        app:layout_constraintEnd_toEndOf="@id/guidelineVertical85"
        android:textSize="15dp"
        android:fontFamily="@font/bmeuljirottf"
        android:textColor="@color/black" />
    <androidx.cardview.widget.CardView
        android:id="@+id/login_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="15dp"
        app:cardBackgroundColor="@color/gray"
        app:layout_constraintStart_toStartOf="@id/guidelineVertical15"
        app:layout_constraintEnd_toEndOf="@id/guidelineVertical85"
        app:layout_constraintTop_toTopOf="@id/guidelineHorizontal6"
        app:layout_constraintBottom_toBottomOf="@id/guidelineHorizontal65">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="로그인하기"
            android:fontFamily="@font/bmeuljirottf"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원가입"
        app:layout_constraintTop_toBottomOf="@id/login_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/gray_text"
        android:fontFamily="@font/bmeuljirottf"
        android:textSize="15dp"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:id="@+id/kakao_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/kakao_login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guidelineHorizontal8" />



</androidx.constraintlayout.widget.ConstraintLayout>