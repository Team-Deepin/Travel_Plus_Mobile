<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:fontFamily="@font/bmeuljirottf"
        android:textSize="30dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="100dp"
        android:layout_marginStart="32dp"/>
    <TextView
        android:id="@+id/detail_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:fontFamily="@font/bmeuljirottf"
        android:textSize="30dp"
        android:textColor="@color/color_text"
        app:layout_constraintTop_toTopOf="@id/detail_title"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="50dp"
        android:layout_marginStart="32dp"/>
    <TextView
        android:id="@+id/detail_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:fontFamily="@font/bmeuljirottf"
        android:textSize="25dp"
        android:textColor="@color/text_sub"
        app:layout_constraintTop_toTopOf="@id/detail_location"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="50dp"
        android:layout_marginStart="32dp"/>
    <TextView
        android:id="@+id/detail_vehicle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:fontFamily="@font/bmeuljirottf"
        android:textSize="25dp"
        android:textColor="@color/text_sub"
        app:layout_constraintTop_toTopOf="@id/detail_location"
        app:layout_constraintStart_toEndOf="@id/detail_duration"
        android:layout_marginTop="50dp"
        android:layout_marginStart="10dp"/>
    <androidx.cardview.widget.CardView
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@color/login_button"
        app:layout_constraintTop_toTopOf="@id/detail_duration"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp">
        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/detail_list"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </ScrollView>
    </androidx.cardview.widget.CardView>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/detail_plus_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="+"
        android:src="@drawable/plus"
        app:backgroundTint="@color/color_button1"
        app:tint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:visibility="visible"/>

</androidx.constraintlayout.widget.ConstraintLayout>