<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/change_theme_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/bmeuljirottf"
        android:text="여행 취향 변경"
        android:textColor="@color/black"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/change_input_theme"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/change_theme_text"
        android:layout_marginTop="30dp">
        <TextView
            android:id="@+id/change_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="여행 취향"
            android:fontFamily="@font/bmeuljirottf"
            android:textSize="25dp"
            android:textColor="@color/color_text"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="26dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="22dp"/>
        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/change_city_tour"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:button="@null"
            android:background="@drawable/radio_button"
            app:layout_constraintTop_toBottomOf="@id/change_theme"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="15dp"
            android:layout_marginStart="34dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="세련된 도시 여행"
            android:fontFamily="@font/bmeuljirottf"
            android:textColor="@color/text_sub"
            app:layout_constraintTop_toBottomOf="@id/change_theme"
            app:layout_constraintStart_toEndOf="@id/change_city_tour"
            android:layout_marginTop="12dp"
            android:layout_marginStart="10dp"/>
        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/change_activity_tour"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:button="@null"
            android:background="@drawable/radio_button"
            app:layout_constraintTop_toBottomOf="@id/change_city_tour"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="15dp"
            android:layout_marginStart="34dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="짜릿한 액티비티 여행"
            android:fontFamily="@font/bmeuljirottf"
            android:textColor="@color/text_sub"
            app:layout_constraintTop_toBottomOf="@id/change_city_tour"
            app:layout_constraintStart_toEndOf="@id/change_activity_tour"
            android:layout_marginTop="12dp"
            android:layout_marginStart="10dp"/>
        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/change_emotion_tour"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:button="@null"
            android:background="@drawable/radio_button"
            app:layout_constraintTop_toBottomOf="@id/change_activity_tour"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="15dp"
            android:layout_marginStart="34dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="예술과 감성 충전 여행"
            android:fontFamily="@font/bmeuljirottf"
            android:textColor="@color/text_sub"
            app:layout_constraintTop_toBottomOf="@id/change_activity_tour"
            app:layout_constraintStart_toEndOf="@id/change_emotion_tour"
            android:layout_marginTop="12dp"
            android:layout_marginStart="10dp"/>
        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/change_shopping_tour"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:button="@null"
            android:background="@drawable/radio_button"
            app:layout_constraintTop_toBottomOf="@id/change_emotion_tour"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="15dp"
            android:layout_marginStart="34dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="트렌디한 쇼핑 탐방"
            android:fontFamily="@font/bmeuljirottf"
            android:textColor="@color/text_sub"
            app:layout_constraintTop_toBottomOf="@id/change_emotion_tour"
            app:layout_constraintStart_toEndOf="@id/change_shopping_tour"
            android:layout_marginTop="12dp"
            android:layout_marginStart="10dp"/>
        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/change_history_tour"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:button="@null"
            android:background="@drawable/radio_button"
            app:layout_constraintTop_toBottomOf="@id/change_shopping_tour"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="15dp"
            android:layout_marginStart="34dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="시간을 거스르는 역사 여행"
            android:fontFamily="@font/bmeuljirottf"
            android:textColor="@color/text_sub"
            app:layout_constraintTop_toBottomOf="@id/change_shopping_tour"
            app:layout_constraintStart_toEndOf="@id/change_history_tour"
            android:layout_marginTop="12dp"
            android:layout_marginStart="10dp"/>
        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/change_healing_tour"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:button="@null"
            android:background="@drawable/radio_button"
            app:layout_constraintTop_toBottomOf="@id/change_history_tour"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="15dp"
            android:layout_marginStart="34dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="힐링 여행 및 웰니스 투어"
            android:fontFamily="@font/bmeuljirottf"
            android:textColor="@color/text_sub"
            app:layout_constraintTop_toBottomOf="@id/change_history_tour"
            app:layout_constraintStart_toEndOf="@id/change_healing_tour"
            android:layout_marginTop="12dp"
            android:layout_marginStart="10dp"/>
        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/change_food_tour"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:button="@null"
            android:background="@drawable/radio_button"
            app:layout_constraintTop_toBottomOf="@id/change_healing_tour"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="15dp"
            android:layout_marginStart="34dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="맛있는 맛집 투어"
            android:fontFamily="@font/bmeuljirottf"
            android:textColor="@color/text_sub"
            app:layout_constraintTop_toBottomOf="@id/change_healing_tour"
            app:layout_constraintStart_toEndOf="@id/change_food_tour"
            android:layout_marginTop="12dp"
            android:layout_marginStart="10dp"/>
        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/change_nature_tour"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:button="@null"
            android:background="@drawable/radio_button"
            app:layout_constraintTop_toBottomOf="@id/change_food_tour"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="15dp"
            android:layout_marginStart="34dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="신비한 자연 투어"
            android:fontFamily="@font/bmeuljirottf"
            android:textColor="@color/text_sub"
            app:layout_constraintTop_toBottomOf="@id/change_food_tour"
            app:layout_constraintStart_toEndOf="@id/change_nature_tour"
            android:layout_marginTop="12dp"
            android:layout_marginStart="10dp"/>
        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/change_experience_tour"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:button="@null"
            android:background="@drawable/radio_button"
            app:layout_constraintTop_toBottomOf="@id/change_nature_tour"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="15dp"
            android:layout_marginStart="34dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="오감만족 체험 여행"
            android:fontFamily="@font/bmeuljirottf"
            android:textColor="@color/text_sub"
            app:layout_constraintTop_toBottomOf="@id/change_nature_tour"
            app:layout_constraintStart_toEndOf="@id/change_experience_tour"
            android:layout_marginTop="12dp"
            android:layout_marginStart="10dp"/>
        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/change_festival_tour"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:button="@null"
            android:background="@drawable/radio_button"
            app:layout_constraintTop_toBottomOf="@id/change_experience_tour"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="15dp"
            android:layout_marginStart="34dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="신나는 축제와 공연"
            android:fontFamily="@font/bmeuljirottf"
            android:textColor="@color/text_sub"
            app:layout_constraintTop_toBottomOf="@id/change_experience_tour"
            app:layout_constraintStart_toEndOf="@id/change_festival_tour"
            android:layout_marginTop="12dp"
            android:layout_marginStart="10dp"/>
        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/change_park_tour"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:button="@null"
            android:background="@drawable/radio_button"
            app:layout_constraintTop_toBottomOf="@id/change_festival_tour"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="15dp"
            android:layout_marginStart="34dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="즐거운 놀이 공원"
            android:fontFamily="@font/bmeuljirottf"
            android:textColor="@color/text_sub"
            app:layout_constraintTop_toBottomOf="@id/change_festival_tour"
            app:layout_constraintStart_toEndOf="@id/change_park_tour"
            android:layout_marginTop="12dp"
            android:layout_marginStart="10dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            app:layout_constraintTop_toBottomOf="@id/change_park_tour"
            app:layout_constraintStart_toStartOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <ImageView
        android:id="@+id/change_theme_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/change_theme_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="50dp"
        android:layout_marginEnd="50dp" />
</androidx.constraintlayout.widget.ConstraintLayout>